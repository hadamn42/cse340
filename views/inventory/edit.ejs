<% if (title) { %>
    <h1 id="car-title"><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- Message -->
<% messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>


<div class="form-holder">
  <form class="new-inv" id="updateForm" action="/inv/update" method="post" >
    <label for="classification_id">Classification <br>
      <%- ninv %>
    </label><br>
    <label for="inv_make">Make <br>
      <input type="text" id="inv_make" name="inv_make" value=<%- inv_make %> required>
    </label><br>
    <label for="inv_model">Model <br>
      <input type="text" id="inv_model" name="inv_model" value=<%- inv_model %> required>
    </label><br> 
    <label for="inv_description">Description <br>
      <textarea id="inv_description" name="inv_description" required><%- inv_description %></textarea>
    </label><br>
    <label for="inv_image">Image Path <br>
      <input type="text" id="inv_image" name="inv_image" value=<%- inv_image %> required>
    </label><br>
    <label for="inv_thumbnail">Thumbnail Path <br>
      <input type="text" id="inv_thumbnail" name="inv_thumbnail" value=<%- inv_thumbnail %> required>
    </label><br>
    <label for="inv_price">Price <br>
      <input type="number" id="inv_price" name="inv_price" value=<%- inv_price %> required>
    </label><br>
    <label for="inv_year">Year <br>
      <input type="number" id="inv_year" name="inv_year" value=<%- inv_year %> required>
    </label><br>
    <label for="inv_miles">Miles <br>
      <input type="number" id="inv_miles" name="inv_miles" value=<%- inv_miles %> required>
    </label><br>
    <label for="inv_color">color<br>
      <input type="text" id="inv_color" name="inv_color" value=<%- inv_color %> required>
    </label><br>
    <input type="submit" value="Update Vehicle" name="submit" id="SUBMIT" class="submitto" disabled>
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
</form>
</div>
<script src="../../js/inv-update.js"></script>