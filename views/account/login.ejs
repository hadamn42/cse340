<!-- heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- Message -->
<% messages() %>

<form class="account-sub" id="loginForm" action="/account/login" method="post">
    <label for="account_email">Email: <br/>
        <input type="email" id="account_email" name="account_email" required>
    </label><br/>
    <label for="account_password">Password:<br/>
        <div class="password-info"><p>The password must contain at least 12 characters, 1 capital letter, 1 number, and 1 special character</p></div>
        <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    </label><br/>
    <input type="submit" value="Submit" name="submit" id="LOGIN" class="submitto">
    <p>Don't have an account? <a href="/account/register">Sign up here.</a></p>
</form>